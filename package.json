{
  "name": "sanity-playground-clean",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy:studio": "cd apps/studio && sanity deploy",
    "deploy:functions": "npx sanity blueprints deploy",
    "check-types": "turbo run check-types",
    "studio:typegen": "cd apps/studio && npm run typegen",
    "marketing:create-aspect": "cd apps/studio && sanity media create-aspect"
  },
  "devDependencies": {
    "@sanity/blueprints": "^0.2.0",
    "prettier": "^3.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.8.0",
    "@sanity/functions": "^1.0.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
