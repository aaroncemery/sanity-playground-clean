{
  "name": "sanity-playground-clean",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy:studio": "cd apps/marketing/studio && sanity deploy",
    "deploy:functions": "pnpm dlx sanity blueprints deploy",
    "check-types": "turbo run check-types",
    "studio:typegen": "cd apps/marketing/studio && pnpm run typegen",
    "marketing:create-aspect": "cd apps/marketing/studio && sanity media create-aspect",
    "dev:burger-haven": "turbo run dev --filter=@jitb/burger-haven-*",
    "dev:burger-haven-studio": "turbo run dev --filter=@jitb/burger-haven-studio",
    "dev:burger-haven-frontend": "turbo run dev --filter=@jitb/burger-haven-frontend",
    "build:burger-haven": "turbo run build --filter=@jitb/burger-haven-*",
    "burger-haven:typegen": "cd apps/burger-haven/studio && pnpm run typegen",
    "deploy:burger-haven-studio": "cd apps/burger-haven/studio && sanity deploy"
  },
  "devDependencies": {
    "@sanity/blueprints": "^0.2.0",
    "prettier": "^3.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.8.0",
    "@sanity/functions": "^1.0.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.4"
}
